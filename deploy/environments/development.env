# FyloCore Development Environment Configuration

# Application Settings
NODE_ENV=development
PORT=8000
LOG_LEVEL=debug

# CORS and Security (relaxed for development)
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true
HELMET_ENABLED=false

# Database Settings (Supabase)
# SUPABASE_URL=your_supabase_project_url
# SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
# SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Service Settings
# ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Authentication Settings
# JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Email Settings (optional in development)
# RESEND_API_KEY=your_resend_api_key
EMAIL_FROM=noreply@fylocore.local
EMAIL_ENABLED=false

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Rate Limiting (relaxed for development)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md

# WebSocket Settings
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_PING_TIMEOUT=5000

# Development-specific settings
HOT_RELOAD=true
DEBUG_SQL=true
ENABLE_SWAGGER=true
SWAGGER_EXPOSE=true

# Docker Compose Override
COMPOSE_PROJECT_NAME=fylocore-dev
COMPOSE_FILE=docker-compose.dev.yml

# Frontend Development Settings
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development
REACT_APP_DEBUG=true

# Development Tools
ENABLE_PLAYGROUND=true
MOCK_AI_RESPONSES=false
SEED_DATABASE=true
