# FyloCore Production Environment Configuration

# Application Settings
NODE_ENV=production
PORT=8000
LOG_LEVEL=info

# CORS and Security (strict for production)
CORS_ORIGIN=https://fylocore.org,https://www.fylocore.org
CORS_CREDENTIALS=true
HELMET_ENABLED=true

# Database Settings (Supabase)
# SUPABASE_URL=your_production_supabase_url
# SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key
# SUPABASE_ANON_KEY=your_production_supabase_anon_key

# AI Service Settings
# ANTHROPIC_API_KEY=your_production_anthropic_api_key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Authentication Settings
# JWT_SECRET=your_secure_production_jwt_secret
JWT_EXPIRES_IN=7d
JWT_ALGORITHM=HS256

# Email Settings
# RESEND_API_KEY=your_production_resend_api_key
EMAIL_FROM=noreply@fylocore.org
EMAIL_ENABLED=true

# Redis Settings
REDIS_URL=redis://redis:6379
# REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Rate Limiting (strict for production)
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,md

# WebSocket Settings
WEBSOCKET_ENABLED=true
WEBSOCKET_PING_INTERVAL=30000
WEBSOCKET_PING_TIMEOUT=5000

# Production-specific settings
HOT_RELOAD=false
DEBUG_SQL=false
ENABLE_SWAGGER=true
SWAGGER_EXPOSE=false  # Only expose internally

# Docker Settings
COMPOSE_PROJECT_NAME=fylocore-prod
COMPOSE_FILE=docker-compose.prod.yml

# Frontend Production Settings
REACT_APP_API_URL=https://api.fylocore.org
REACT_APP_WS_URL=wss://api.fylocore.org
REACT_APP_ENVIRONMENT=production
REACT_APP_DEBUG=false

# Production Tools
ENABLE_PLAYGROUND=false
MOCK_AI_RESPONSES=false
SEED_DATABASE=false

# Monitoring and Observability
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# Performance Settings
CLUSTER_MODE=true
CLUSTER_WORKERS=0  # Auto-detect based on CPU cores
COMPRESSION_ENABLED=true
CACHE_TTL=3600  # 1 hour

# Security Settings
TRUST_PROXY=true
SESSION_SECURE=true
COOKIE_SECURE=true
COOKIE_SAME_SITE=strict
