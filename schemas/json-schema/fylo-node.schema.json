{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fylocore.org/schemas/node",
  "title": "FyloCore Node Schema",
  "description": "JSON Schema for FyloCore knowledge graph nodes",
  "type": "object",
  "required": ["id", "created_at", "graph_id", "type", "position", "data"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the node"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the node was created"
    },
    "graph_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier of the graph this node belongs to"
    },
    "type": {
      "type": "string",
      "enum": [
        "Default",
        "Question", 
        "Investigation",
        "Evidence",
        "Claim",
        "Theory",
        "Method",
        "Result",
        "Concept",
        "Document"
      ],
      "description": "Node type classification for knowledge representation"
    },
    "position": {
      "type": "object",
      "required": ["x", "y"],
      "properties": {
        "x": {
          "type": "number",
          "description": "X coordinate in the graph canvas"
        },
        "y": {
          "type": "number", 
          "description": "Y coordinate in the graph canvas"
        }
      },
      "description": "2D position of the node in the graph canvas"
    },
    "data": {
      "type": "object",
      "required": ["id", "description", "node_type"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1,
          "description": "Human-readable identifier or title for the node"
        },
        "internal_id": {
          "type": "string",
          "description": "Internal snake_case identifier for system use"
        },
        "description": {
          "type": "string",
          "minLength": 1,
          "description": "Detailed content or description of the node"
        },
        "node_type": {
          "type": "string",
          "enum": ["Question", "Investigation", "Evidence", "Claim"],
          "description": "Semantic type for knowledge representation"
        },
        "is_moving": {
          "type": "boolean",
          "description": "Flag indicating if the node is currently being moved"
        },
        "picker_color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Hex color code for node visualization"
        },
        "is_root": {
          "type": "boolean",
          "description": "Flag indicating if this is the root node of the graph"
        },
        "document_content": {
          "type": "string",
          "description": "Original document content associated with this node"
        },
        "citation": {
          "$ref": "#/$defs/citation",
          "description": "Primary citation reference for this node"
        },
        "citations": {
          "type": "array",
          "items": { "$ref": "#/$defs/citation" },
          "description": "Multiple citation references"
        },
        "embeddings": {
          "type": "array",
          "items": { "type": "number" },
          "description": "Vector embeddings for semantic similarity"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Confidence score for the node's validity"
        },
        "locked_by": {
          "type": "string",
          "format": "uuid",
          "description": "User ID if the node is currently locked for editing"
        }
      }
    }
  },
  "$defs": {
    "citation": {
      "type": "object",
      "properties": {
        "ref_id": {
          "type": "string",
          "description": "Reference identifier"
        },
        "title": {
          "type": "string",
          "description": "Title of the cited work"
        },
        "doi": {
          "type": "string",
          "pattern": "^10\\.[0-9]{4,}/.+$",
          "description": "Digital Object Identifier"
        },
        "authors": {
          "type": "array",
          "items": { "type": "string" },
          "description": "List of authors"
        },
        "year": {
          "type": "integer",
          "minimum": 1000,
          "maximum": 9999,
          "description": "Publication year"
        },
        "journal": {
          "type": "string",
          "description": "Journal or publication venue"
        }
      }
    }
  }
}
