{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://fylocore.org/schemas/graph",
  "title": "FyloCore Graph Schema",
  "description": "JSON Schema for FyloCore knowledge graph representation",
  "type": "object",
  "required": ["id", "created_at", "title", "description", "creator_id", "type"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the graph"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when the graph was created"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Human-readable title of the graph"
    },
    "description": {
      "type": "string",
      "maxLength": 2000,
      "description": "Detailed description of the graph's purpose and content"
    },
    "creator_id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier of the user who created this graph"
    },
    "type": {
      "type": "string",
      "enum": ["PUBLIC", "PRIVATE"],
      "description": "Visibility level of the graph"
    },
    "source_graph_id": {
      "type": "string",
      "format": "uuid",
      "description": "Reference to the original graph if this is a fork/clone"
    },
    "node_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of nodes in this graph"
    },
    "contributors": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/contributor"
      },
      "description": "List of users who have contributed to this graph"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Keywords associated with this graph"
        },
        "domain": {
          "type": "string",
          "description": "Academic or research domain"
        },
        "license": {
          "type": "string",
          "description": "License under which the graph is shared"
        }
      }
    }
  },
  "$defs": {
    "contributor": {
      "type": "object",
      "required": ["name", "profile_color"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Display name of the contributor"
        },
        "profile_color": {
          "type": "string",
          "pattern": "^#[0-9A-Fa-f]{6}$",
          "description": "Hex color code for the contributor's profile"
        }
      }
    }
  }
}
