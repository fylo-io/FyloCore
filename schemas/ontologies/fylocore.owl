<?xml version="1.0"?>
<rdf:RDF xmlns="https://fylocore.org/ontology#"
     xml:base="https://fylocore.org/ontology"
     xmlns:owl="http://www.w3.org/2002/07/owl#"
     xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:xml="http://www.w3.org/XML/1998/namespace"
     xmlns:xsd="http://www.w3.org/2001/XMLSchema#"
     xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#"
     xmlns:dcterms="http://purl.org/dc/terms/"
     xmlns:skos="http://www.w3.org/2004/02/skos/core#"
     xmlns:foaf="http://xmlns.com/foaf/0.1/">
    <owl:Ontology rdf:about="https://fylocore.org/ontology">
        <owl:versionIRI rdf:resource="https://fylocore.org/ontology/1.0"/>
        <dcterms:title>FyloCore Knowledge Graph Ontology</dcterms:title>
        <dcterms:description>An ontology for representing knowledge graphs in the FyloCore platform</dcterms:description>
        <dcterms:creator>FyloCore Development Team</dcterms:creator>
        <dcterms:license rdf:resource="https://creativecommons.org/publicdomain/zero/1.0/"/>
        <owl:versionInfo>1.0</owl:versionInfo>
    </owl:Ontology>
    
    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Classes
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    <!-- https://fylocore.org/ontology#KnowledgeGraph -->
    <owl:Class rdf:about="https://fylocore.org/ontology#KnowledgeGraph">
        <rdfs:label>Knowledge Graph</rdfs:label>
        <rdfs:comment>A structured representation of knowledge as a graph of interconnected entities</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://www.w3.org/2004/02/skos/core#ConceptScheme"/>
    </owl:Class>

    <!-- https://fylocore.org/ontology#KnowledgeNode -->
    <owl:Class rdf:about="https://fylocore.org/ontology#KnowledgeNode">
        <rdfs:label>Knowledge Node</rdfs:label>
        <rdfs:comment>An entity representing a concept, claim, question, or piece of evidence in a knowledge graph</rdfs:comment>
        <rdfs:subClassOf rdf:resource="http://www.w3.org/2004/02/skos/core#Concept"/>
    </owl:Class>

    <!-- https://fylocore.org/ontology#Question -->
    <owl:Class rdf:about="https://fylocore.org/ontology#Question">
        <rdfs:subClassOf rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:label>Question</rdfs:label>
        <rdfs:comment>A research question or inquiry that drives investigation</rdfs:comment>
    </owl:Class>

    <!-- https://fylocore.org/ontology#Investigation -->
    <owl:Class rdf:about="https://fylocore.org/ontology#Investigation">
        <rdfs:subClassOf rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:label>Investigation</rdfs:label>
        <rdfs:comment>A systematic inquiry or research methodology</rdfs:comment>
    </owl:Class>

    <!-- https://fylocore.org/ontology#Evidence -->
    <owl:Class rdf:about="https://fylocore.org/ontology#Evidence">
        <rdfs:subClassOf rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:label>Evidence</rdfs:label>
        <rdfs:comment>Data, observations, or facts that support or contradict claims</rdfs:comment>
    </owl:Class>

    <!-- https://fylocore.org/ontology#Claim -->
    <owl:Class rdf:about="https://fylocore.org/ontology#Claim">
        <rdfs:subClassOf rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:label>Claim</rdfs:label>
        <rdfs:comment>An assertion or conclusion that can be supported or refuted by evidence</rdfs:comment>
    </owl:Class>

    <!-- https://fylocore.org/ontology#KnowledgeRelation -->
    <owl:Class rdf:about="https://fylocore.org/ontology#KnowledgeRelation">
        <rdfs:label>Knowledge Relation</rdfs:label>
        <rdfs:comment>A relationship between knowledge nodes in a graph</rdfs:comment>
    </owl:Class>

    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Object Properties
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    <!-- https://fylocore.org/ontology#hasNode -->
    <owl:ObjectProperty rdf:about="https://fylocore.org/ontology#hasNode">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#KnowledgeGraph"/>
        <rdfs:range rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:label>has node</rdfs:label>
        <rdfs:comment>Indicates that a knowledge graph contains a specific node</rdfs:comment>
    </owl:ObjectProperty>

    <!-- https://fylocore.org/ontology#supports -->
    <owl:ObjectProperty rdf:about="https://fylocore.org/ontology#supports">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#Evidence"/>
        <rdfs:range rdf:resource="https://fylocore.org/ontology#Claim"/>
        <rdfs:label>supports</rdfs:label>
        <rdfs:comment>Indicates that evidence provides support for a claim</rdfs:comment>
    </owl:ObjectProperty>

    <!-- https://fylocore.org/ontology#contradicts -->
    <owl:ObjectProperty rdf:about="https://fylocore.org/ontology#contradicts">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#Evidence"/>
        <rdfs:range rdf:resource="https://fylocore.org/ontology#Claim"/>
        <rdfs:label>contradicts</rdfs:label>
        <rdfs:comment>Indicates that evidence contradicts or refutes a claim</rdfs:comment>
    </owl:ObjectProperty>

    <!-- https://fylocore.org/ontology#investigates -->
    <owl:ObjectProperty rdf:about="https://fylocore.org/ontology#investigates">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#Investigation"/>
        <rdfs:range rdf:resource="https://fylocore.org/ontology#Question"/>
        <rdfs:label>investigates</rdfs:label>
        <rdfs:comment>Indicates that an investigation addresses a specific question</rdfs:comment>
    </owl:ObjectProperty>

    <!-- https://fylocore.org/ontology#produces -->
    <owl:ObjectProperty rdf:about="https://fylocore.org/ontology#produces">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#Investigation"/>
        <rdfs:range rdf:resource="https://fylocore.org/ontology#Evidence"/>
        <rdfs:label>produces</rdfs:label>
        <rdfs:comment>Indicates that an investigation generates evidence</rdfs:comment>
    </owl:ObjectProperty>

    <!-- https://fylocore.org/ontology#relatesTo -->
    <owl:ObjectProperty rdf:about="https://fylocore.org/ontology#relatesTo">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:range rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:label>relates to</rdfs:label>
        <rdfs:comment>General relationship between knowledge nodes</rdfs:comment>
    </owl:ObjectProperty>

    <!-- 
    ///////////////////////////////////////////////////////////////////////////////////////
    //
    // Data Properties
    //
    ///////////////////////////////////////////////////////////////////////////////////////
     -->

    <!-- https://fylocore.org/ontology#hasConfidence -->
    <owl:DatatypeProperty rdf:about="https://fylocore.org/ontology#hasConfidence">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#float"/>
        <rdfs:label>has confidence</rdfs:label>
        <rdfs:comment>Confidence score between 0 and 1 for the validity of a knowledge node</rdfs:comment>
    </owl:DatatypeProperty>

    <!-- https://fylocore.org/ontology#hasPosition -->
    <owl:DatatypeProperty rdf:about="https://fylocore.org/ontology#hasPosition">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"/>
        <rdfs:label>has position</rdfs:label>
        <rdfs:comment>Spatial coordinates of a node in the graph visualization</rdfs:comment>
    </owl:DatatypeProperty>

    <!-- https://fylocore.org/ontology#createdAt -->
    <owl:DatatypeProperty rdf:about="https://fylocore.org/ontology#createdAt">
        <rdfs:domain rdf:resource="https://fylocore.org/ontology#KnowledgeNode"/>
        <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#dateTime"/>
        <rdfs:label>created at</rdfs:label>
        <rdfs:comment>Timestamp when the knowledge node was created</rdfs:comment>
    </owl:DatatypeProperty>

</rdf:RDF>
